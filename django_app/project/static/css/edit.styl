#toolbox-container
	optionsPanel()
	
	#bold-btn
		margin-left 35px

	#link-btn
		margin-left 35px

#slide-options
	position absolute
	optionsPanel()
	
	#change-size
		margin-top 3%
		
		label
			color $secondary_color
			font-weight bold
	
	#btn-delete-slide
		&:hover
			color #b43636
		

/*Color picker*/
#colorpicker 
	z-index 1
	position absolute
	top 30%
	left 75%

	#picker-wrapper 
		width 200px
		height 200px
		position relative

		#picker-indicator 
			width 3px
			height 3px
			position absolute
			border 1px solid #fff

	#slider-wrapper 
		width 30px
		height 200px
		position relative

		#slider-indicator 
			width 100%
			height 10px
			position absolute
			border 1px solid #000

/* Slide */
.step
	border 1px dotted #808080
	
	&.hoverable
		&:hover
			hoverSlide()

	/* When a slide is selected */
	&.selected
		selectedSlide()
	
	&.borderless
		border none

/*Component*/
.component
	white-space nowrap
	padding 4px
	position absolute
	padding-top 1px
	padding-left 1px
	
	&.hoverable
		&:hover
			hoverComponent()
	
	/*&:hover
		hoverComponent()
		cursor pointer*/
	
	.component-options
		position absolute
		/*top -110%
		left -13%*/
		transform translate(-48px, -12px)
		z-index 1
		
		.btn-edit-text
			display block

		.btn-delete-component
			display block
			
			&:hover
				color #b43636
	
	.component-text-tools 
		position absolute
		top -45px
		background-color #808080
		z-index 1

	&.selected-component
		selectedComponent()

#themes-window
	#themes-list
		.theme-item
			text-align center
			border 2px solid white
			
			&:hover
				border 2px solid $primary_color