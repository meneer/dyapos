@import 'base'

header
	margin-bottom 30px

footer
	margin-top 40px
	margin-bottom 40px

#main
	margin-bottom 40px

.orbit-slides-container
	li
		height 350px

.orbit-container
	.orbit-timer
		.orbit-progress
			height: 3px;
			background-color: $primary_color
			display: block;
			width: 0%;
			position: relative;
			right: 20px;
			top: 5px;	

.orbit-prev
.orbit-next
.orbit-slide-number	
	background-color rgba(0, 0, 0, 0.3)			

